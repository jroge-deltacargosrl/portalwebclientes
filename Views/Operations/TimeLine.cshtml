                    <br />
                    <input type="file" id="archivo2" name="archivo2" />
                    <br />
                    <input type="submit" value="Subir archivos" />
                </form>
                <div id="mensaje"></div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
